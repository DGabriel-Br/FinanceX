// Prisma schema for FinanceX

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  receita
  despesa
}

enum InvestmentActivityType {
  aporte
  resgate
}

enum InvestmentType {
  reserva_emergencia
  acoes
  fundos_imobiliarios
  renda_fixa
  tesouro_direto
  criptomoedas
  outros_investimentos
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  transactions Transaction[]
  debts     Debt[]
  investmentGoals InvestmentGoal[]
}

model Transaction {
  id          String          @id @default(uuid())
  userId      String
  type        TransactionType
  category    String
  date        DateTime
  description String
  value       Decimal         @db.Decimal(12, 2)
  investmentType InvestmentType?
  investmentActivity InvestmentActivityType?
  createdAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id])

  @@index([userId, date])
}

model Debt {
  id               String   @id @default(uuid())
  userId           String
  name             String
  totalValue       Decimal  @db.Decimal(12, 2)
  paidValue         Decimal @db.Decimal(12, 2) @default(0)
  monthlyInstallment Decimal @db.Decimal(12, 2)
  startDate        DateTime
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model InvestmentGoal {
  id           String   @id @default(uuid())
  userId       String
  name         String
  targetValue  Decimal  @db.Decimal(12, 2)
  currentValue Decimal  @db.Decimal(12, 2) @default(0)
  deadline     DateTime?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
